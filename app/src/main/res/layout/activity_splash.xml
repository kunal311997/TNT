<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".enroll.ui.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/feed_image_width"
        android:fontFamily="@font/avenirltstd_bold"
        android:src="@drawable/app_logo"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/font_size_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/match_constraints"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_semi_medium"
        android:fontFamily="@font/avenirltstd_book"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_4"
        android:text="@string/be_your_own_master_with_useful_daily_life_tips_and_some_cool_hacks"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/font_size_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>